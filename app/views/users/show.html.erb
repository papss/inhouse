<p id="notice"><%= notice %></p>

<h1>
  <%= @user.user_name %>
</h1>

<h2>
  My Leagues
</h2>

<% if @user.leagues.any? %>
  <% @user.leagues.each do |league| %>

  <h4>
    <%= league.name %>
  </h4>
  <%= link_to "Leave this league", league_url(league) %>

  <% end %>
<% else %>

  <p>
    You don't seem to be a member of any leagues.
  </p>

<% end %>

<h4>
  <%= link_to 'Start a new League', new_league_path %>
</h4>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
